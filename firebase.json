{
  "functions": {
    "predeploy": [
      "(cd \"$RESOURCE_DIR\" && npm ci)"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/api_v2functions/**",
        "function": "api_v2functions"
      }
    ],
    "trailingSlash": false,
    "redirects": [
      {
        "source": "/api/v1/:splat*",
        "destination": "/api/v2/:splat",
        "type": 301
      },
      {
        "source": "/docsv1",
        "destination": "/docs/v1",
        "type": 301
      },
      {
        "source": "/docsv2",
        "destination": "/docs/v2",
        "type": 301
      }
    ]
  }
}
