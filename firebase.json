{
  "functions": {
    "source": "functions_v1"
  },
  "hosting": {
    "public": "public",
    "headers": [
      {
        "regex": "https://pokeapi.co/.*/routeInfo.json",
        "headers": [
          {
            "key": "Cache-Tag",
            "value": "website"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      },
      {
        "source": "https://pokeapi.co/**/*.@(css|js|png)",
        "headers": [
          {
            "key": "Cache-Tag",
            "value": "website"
          },
          {
            "key": "Cache-Control",
            "value": "max-age=86400"
          }
        ]
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api_v1functions"
      }
    ],
    "trailingSlash": false,
    "redirects": [
      {
        "source": "/api/v1/:splat*",
        "destination": "/api/v2/:splat",
        "type": 301
      },
      {
        "source": "/docsv1",
        "destination": "/docs/v1",
        "type": 301
      },
      {
        "source": "/docsv2",
        "destination": "/docs/v2",
        "type": 301
      }
    ]
  }
}