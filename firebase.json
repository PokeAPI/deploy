{
  "functions": {
    "source": "functions",
    "codebase": "default",
    "predeploy": [
      "(cd \"$RESOURCE_DIR\" && npm ci)"
    ],
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ],
    "trailingSlash": false,
    "redirects": [
      {
        "source": "/api/v1/:splat*",
        "destination": "/api/v2/:splat",
        "type": 301
      },
      {
        "source": "/docsv1",
        "destination": "/docs/v1",
        "type": 301
      },
      {
        "source": "/docsv2",
        "destination": "/docs/v2",
        "type": 301
      }
    ]
  }
}
